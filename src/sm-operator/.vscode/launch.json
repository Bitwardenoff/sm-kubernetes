    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/main.go",
            "cwd": "${workspaceFolder}",
            "buildFlags": ["-ldflags='-linkmode external -extldflags \"-static\"'"],
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "CC": "musl-gcc"
            }
        },
        {
            "name": "Test current file",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${relativeFileDirname}",
            "cwd": "${relativeFileDirname}",
            "buildFlags": ["-ldflags='-linkmode external -extldflags \"-static\"'"],
            "env": {
                "CC": "musl-gcc",
                "KUBEBUILDER_ASSETS": "${workspaceFolder}/bin/k8s/1.27.1-linux-amd64"
            }
        }
    ]
}
